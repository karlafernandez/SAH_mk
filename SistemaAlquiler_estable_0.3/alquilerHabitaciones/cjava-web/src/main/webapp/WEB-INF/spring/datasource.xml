<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
       xmlns:tx="http://www.springframework.org/schema/tx" xmlns:jdbc="http://www.springframework.org/schema/jdbc"
       xsi:schemaLocation="http://www.springframework.org/schema/jdbc http://www.springframework.org/schema/jdbc/spring-jdbc-3.0.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:component-scan base-package="pe.com.microdata.cjava.dataaccess" />
    <tx:annotation-driven /> 
    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="com.mysql.jdbc.Driver"/> 

        <property name="url" value="jdbc:mysql://localhost:3306/sahdb"/>  
        <property name="username" value="root"/>
        <property name="password" value="desarrollo"/>
        <property name="connectionProperties" value="alterSession=true"/>   
        
        
<!--                        <property name="url" value="jdbc:mysql://127.2.177.2:3306/cjava"/>  
        <property name="username" value="adminrR76AG1"/>
            <property name="password" value="ZNzsEfIRb1S2"/>        
        <property name="connectionProperties" value="alterSession=true"/>        -->
        

    </bean>
    <bean id="interceptor" class="pe.com.microdata.cjava.dataaccess.interceptor.HibernateInterceptor">
         
    </bean>
    
     <bean id="sessionFactoryLog" class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
        <property name="dataSource" ref="dataSource"/>  
        <property name="annotatedClasses">
            <list>     
                <value>pe.com.microdata.cjava.dataaccess.model.log.LogVO</value>
                <value>pe.com.microdata.cjava.dataaccess.model.log.LogDetalleVO</value> 
            </list>
        </property>
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
                <prop key="hibernate.show_sql">false</prop>
                <prop key="hibernate.format_sql">false</prop>
            </props>
        </property>
    </bean>
    
    
 
    <bean id="sessionFactory" class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
        <property name="dataSource" ref="dataSource"/>
        <!-- Refer to Interceptor Here -->
        <property name="entityInterceptor">
            <ref bean="interceptor"/>
        </property>
        <property name="annotatedClasses">
            <list> 
                               
                <value>pe.com.microdata.cjava.dataaccess.model.PacienteVO</value>
                <value>pe.com.microdata.cjava.dataaccess.model.administracion.curso.CuartoVO</value>
                <value>pe.com.microdata.cjava.dataaccess.model.administracion.persona.SubTipoVO</value>
                <value>pe.com.microdata.cjava.dataaccess.model.administracion.persona.TipoVO</value>
             
                
                <value>pe.com.microdata.cjava.dataaccess.model.administracion.persona.ClienteVO</value>
                <value>pe.com.microdata.cjava.dataaccess.model.administracion.persona.ArrendatarioVO</value>
               
                <value>pe.com.microdata.cjava.dataaccess.model.administracion.persona.UbigeoVO</value>
                <value>pe.com.microdata.cjava.dataaccess.model.administracion.persona.PersonaVO</value>
                
                 
                <value>pe.com.microdata.cjava.dataaccess.model.operacion.alquilado.FrecuenciaDiaVO</value>
                
                                                                                                               
                <value>pe.com.microdata.cjava.dataaccess.model.operacion.alquilado.AlquilarVO</value>     
                <value>pe.com.microdata.cjava.dataaccess.model.operacion.alquilado.OperacionClienteVO</value>  
                <value>pe.com.microdata.cjava.dataaccess.model.operacion.alquilado.OperacionArrendatarioVO</value>     
                              
                
                                                                                                                            
                <value>pe.com.microdata.cjava.dataaccess.model.acceso.AccesoModuloVO</value>
                <value>pe.com.microdata.cjava.dataaccess.model.acceso.AccesoGrupoVO</value>
                <value>pe.com.microdata.cjava.dataaccess.model.acceso.AccesoTemplateVO</value>
                <value>pe.com.microdata.cjava.dataaccess.model.acceso.AccesoVO</value>
                  
                <value>pe.com.microdata.cjava.dataaccess.model.archivo.ArchivoVO</value>
                
                <value>pe.com.microdata.cjava.dataaccess.model.log.LogVO</value>
                <value>pe.com.microdata.cjava.dataaccess.model.log.LogDetalleVO</value>
                
               
                                               
             
            </list>
        </property>
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
                <prop key="hibernate.show_sql">true</prop>
                <prop key="hibernate.format_sql">true</prop>
            </props>
        </property>
    </bean>
    
    <bean id="transactionManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager">
        <property name="sessionFactory">
            <ref local="sessionFactory"/>
        </property>
    </bean> 
   
   
</beans> 